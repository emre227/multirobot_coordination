<launch>
  <arg name="my_robot"/>
  <group ns="$(arg my_robot)">
    <!-- Gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="turtlebot3_slam_gmapping" output="screen">
      <param name="base_frame" value="$(arg my_robot)/base_footprint"/>
      <param name="odom_frame" value="$(arg my_robot)/odom"/>
      <param name="map_frame"  value="$(arg my_robot)/map"/>
      <rosparam command="load" file="$(find turtlebot3_slam)/config/gmapping_params.yaml" />
    </node>
  </group>
</launch>
